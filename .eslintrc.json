{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": ["prettier", "airbnb-base"],
    "plugins": ["prettier"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "prettier/prettier": "error",
        "indent": ["error", 4],
        "consistent-return": 0,
        "comma-dangle": "off",
        "no-param-reassign": "off"
    }
}
